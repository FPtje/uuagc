mapPass :: (a -> b -> (c,a)) -> a -> [b] -> ([c],a)
mapPass f nil [] = ([],nil)
mapPass f nil (x:xs) = let (y,z) = f nil x
                           (rest,a) = mapPass f z xs
                       in (y : rest,a)
}

